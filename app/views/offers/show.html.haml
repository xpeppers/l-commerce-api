- model_class = Offer
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @offer.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @offer.description
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @offer.price
%p
  %strong= model_class.human_attribute_name(:image_url) + ':'
  %br
  = @offer.image_url
%p
  %strong= model_class.human_attribute_name(:original_price) + ':'
  %br
  = @offer.original_price
%p
  %strong= model_class.human_attribute_name(:merchant) + ':'
  %br
  = @offer.merchant
%p
  %strong= model_class.human_attribute_name(:telephone) + ':'
  %br
  = @offer.telephone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @offer.email
%p
  %strong= model_class.human_attribute_name(:web_site) + ':'
  %br
  = @offer.web_site
%p
  %strong= model_class.human_attribute_name(:street) + ':'
  %br
  = @offer.street
%p
  %strong= model_class.human_attribute_name(:zip_code) + ':'
  %br
  = @offer.zip_code
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @offer.city
%p
  %strong= model_class.human_attribute_name(:latitude) + ':'
  %br
  = @offer.latitude
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br
  = @offer.longitude


= link_to t('.back', default: t("helpers.links.back")), offers_path, class: 'btn btn-default'
= link_to t('.edit', default: t("helpers.links.edit")), edit_offer_path(@offer), class: 'btn btn-default'
= link_to t('.destroy', default: t("helpers.links.destroy")), offer_path(@offer), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
