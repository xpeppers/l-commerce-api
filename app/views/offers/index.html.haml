- model_class = Offer
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:original_price)
      %th= model_class.human_attribute_name(:merchant)
      %th= model_class.human_attribute_name(:telephone)
      %th= model_class.human_attribute_name(:email)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @offers.each do |offer|
      %tr
        %td= link_to offer.title, offer_path(offer)
        %td= offer.description
        %td= offer.price
        %td= offer.original_price
        %td= offer.merchant
        %td= offer.telephone
        %td= offer.email
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_offer_path(offer), class: 'btn btn-default btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), offer_path(offer), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_offer_path, class: 'btn btn-primary'
