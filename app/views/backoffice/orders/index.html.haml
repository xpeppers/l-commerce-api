- model_class = Order
.page-header
  %h1
    = t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-bordered.table-striped
  %thead
    %tr
      %td= model_class.human_attribute_name(:timestamp)
      %td Buyer
      %td Offer
      %td Merchant
      %td Code
      %td= model_class.human_attribute_name(:status)
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.created_at.in_time_zone('Rome')
        %td= order.user.email
        %td= offer_title_from(order)
        %td= merchant_name_from(order)
        %td= coupon_code_from(order)
        %td= order.status
