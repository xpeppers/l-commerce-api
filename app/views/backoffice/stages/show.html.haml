- model_class = Stage
.page-header
  %h1
    = @stage.title
    = link_to t('.edit', default: t("helpers.links.edit")), edit_backoffice_path_stage_path(@stage.path, @stage), class: 'btn btn-primary'
    = link_to t('.destroy', default: t("helpers.links.destroy")), backoffice_path_stage_path(@stage.path, @stage), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'

.container
  .row
    .col-lg-10
      %h4.text-uppercase
        = :description
      %p.lead= @stage.description
  .row
    .col-lg-10
      = show_image_related_to(@stage)

= link_to t('.cancel', default: t("helpers.links.cancel")), backoffice_path_path(@stage.path), class: 'btn btn-default'
