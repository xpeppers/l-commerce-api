- model_class = Path
.page-header
  %h1
    = @path.title
    = link_to t('.edit', default: t("helpers.links.edit")), edit_backoffice_path_path(@path), class: 'btn btn-primary'

%div.container
  %div.row
    %div.col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-12
      %h2.text-center{style: 'margin: 20px 0; padding: 10px 0; border: solid 1px #bbb; background-color: #eee;'}
        =render partial: 'prices'
      %p.lead.text-uppercase
        = @path.title
      %h4.text-uppercase
        = :description
      %p.lead= @path.description

= link_to t('.destroy', default: t("helpers.links.destroy")), backoffice_path_path(@path), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
