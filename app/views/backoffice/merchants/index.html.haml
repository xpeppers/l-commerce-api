- model_class = Merchant
.page-header
  %h1
    = t '.title', default: model_class.model_name.human.pluralize.titleize
    = link_to t('.new', default: t("helpers.links.new")), new_backoffice_merchant_path, class: 'btn btn-primary'
%table.table.table-bordered.table-striped
  %thead
    %tr
      %td= model_class.human_attribute_name(:name)
      %td= model_class.human_attribute_name(:web_site)
      %td= model_class.human_attribute_name(:email)
      %td= model_class.human_attribute_name(:telephone)
  %tbody
    - @merchants.each do |merchant|
      %tr
        %td
          %h5= link_to merchant.name, backoffice_merchant_path(merchant)
          %div
            = link_to t('.edit', default: t("helpers.links.edit")), edit_backoffice_merchant_path(merchant)
            |
            = link_to t('.show', default: t("helpers.links.show")) , backoffice_merchant_path(merchant)
            |
            = link_to t('.destroy', default: t("helpers.links.destroy")), backoffice_merchant_path(merchant), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }
        %td= merchant.web_site
        %td= merchant.email
        %td= merchant.telephone
