- model_class = Offer
.page-header
  %h1= @offer.title

%p.lead= @offer.description
%h2
  %span.label{style: 'color: black'}
    %strike= "#{@offer.original_price} €"
  %span.label.label-success= "#{@offer.price} €"
%p
  %strong= model_class.human_attribute_name(:merchant) + ':'
  %br= @offer.merchant
%p
  %strong= model_class.human_attribute_name(:telephone) + ':'
  %br= @offer.telephone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br= @offer.email
%p
  %strong= model_class.human_attribute_name(:web_site) + ':'
  %br= @offer.web_site
%p
  %strong= model_class.human_attribute_name(:street) + ':'
  %br= @offer.street
%p
  %strong= model_class.human_attribute_name(:zip_code) + ':'
  %br= @offer.zip_code
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br= @offer.city
%p
  %strong= model_class.human_attribute_name(:latitude) + ':'
  %br= @offer.latitude
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br= @offer.longitude

%address
  %strong= @offer.merchant
  %br= @offer.street
  %br= "#{@offer.zip_code}, #{@offer.city}"
  %br= @offer.telephone

= link_to t('.edit', default: t("helpers.links.edit")), edit_backoffice_offer_path(@offer), class: 'btn btn-default'
= link_to t('.destroy', default: t("helpers.links.destroy")), backoffice_offer_path(@offer), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
